<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../../css/styles.css" type="BorderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox prefWidth="256.0" styleClass="vbox" stylesheets="@../../css/styles.css" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="113.0" fitWidth="226.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/Delaware-logo.svg.png" />
                     </image>
                  </ImageView>
            <Button fx:id="ordersButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" stylesheets="@../../css/styles.css" text="Orders" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icons/orders.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="20.0" left="35.0" right="50.0" top="20.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="customersButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" stylesheets="@../../css/styles.css" text="Customers" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icons/customers.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="20.0" left="35.0" right="50.0" top="20.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="logOutButton" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="10.0" mnemonicParsing="false" stylesheets="@../../css/styles.css" text="Log out" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="20.0" left="35.0" right="35.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="35.0" left="35.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <HBox fx:id="title" alignment="BOTTOM_LEFT" styleClass="hbox" stylesheets="@../../css/styles.css" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefHeight="59.0" text="Welcome " HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" top="35.0" />
                     </padding>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label alignment="CENTER" fx:id="lbl_name_login" prefHeight="59.0" text="Company name">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <padding>
                        <Insets right="35.0" top="35.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets left="30.0" top="35.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <HBox fx:id="mainScreen" prefHeight="800.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
</fx:root>
